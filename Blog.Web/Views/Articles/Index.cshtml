@model IEnumerable<Blog.Web.ViewModels.Article.IndexViewModel>

@{
    ViewBag.Title = "Blog-Articles";
}

<h2>Articles</h2>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@item.Title</h3>
                <p>@item.AuthorName posted this on @item.TimeCreated.Day/@item.TimeCreated.Month/@item.TimeCreated.Year at @item.TimeCreated.TimeOfDay.Hours:@item.TimeCreated.TimeOfDay.Minutes</p>
                @foreach (var tag in item.Tags)
                {
                    <a href="@Url.Action("FindByTag", new { tagId = tag.Id })">
                        <span class="label label-default">@tag.Text</span>
                    </a> 
                }
            </div>
            <div class="panel-body">
                @item.PreviewText
            </div>
        </div>
    }
</div>
